	<appender name="info"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>
			${log.dir.logback}/info.log
		</File>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.dir.logback}/info.%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss}, %5p %c:%L - %m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	<!-- 异步输出 -->
	<appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
		<!-- <discardingThreshold >0</discardingThreshold> -->
		<!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
		<queueSize>512</queueSize>
		<!-- 添加附加的appender,最多只能添加一个 -->
		<appender-ref ref="info" />
	</appender>

	<appender name="error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>
			${log.dir.logback}/error.log
		</File>
        
        
        
        
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${log.dir.logback}/error.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss}, %5p %c:%L - %m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>


	<appender name="singleInfoLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>UTF-8</encoder>
		<File>
			${log.dir.logback}/singleInfoLog.log
		</File>

		<append>true</append>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${log.dir.logback}/singleInfoLog.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss}, %5p %c:%L - %m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>



	<appender name="timerLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>UTF-8</encoder>
		<File>
			${log.dir.logback}/timerLog.log
		</File>

		<append>true</append>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${log.dir.logback}/timerLog.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss}, %5p %c:%L - %m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>


	<appender name="analysis"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>UTF-8</encoder>
		<File>
			${log.dir.logback}/analysis.log
		</File>

		<append>true</append>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${log.dir.logback}/analysis.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss}, %5p %m%n
			</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
    
    <!-- 异步输出 -->
    <appender name=ASYNC_ANALYSIS class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <!-- <discardingThreshold >0</discardingThreshold> -->
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="analysis" />
    </appender>

	<logger name="com.bus.chelaile.common.SingleInfoLog" additivity="false"
		level="info">
		<appender-ref ref="singleInfoLog" />
	</logger>


	<logger name="com.bus.chelaile.common.TimeLong" additivity="false"
		level="info">
		<appender-ref ref="timerLog" />
	</logger>


	<logger name="com.bus.chelaile.common.AnalysisLog" additivity="false"
		level="info">
		<appender-ref ref="analysis" />
	</logger>

	<logger name="org.springframework.web" additivity="false" level="debug">
		<appender-ref ref="info" />
	</logger>

	<root level="INFO">
		<!-- <appender-ref ref="info" /> -->
		<appender-ref ref="error" />
        
        
        
        
        
        
       
        <appender-ref ref="ASYNC" />
        <appender-ref ref="ASYNC_ANALYSIS" />
        
	</root>

















</configuration>	